  <h2>Assignments</h2>
  <table class="table">
    <thead>
        <th>Name</th>
        <th>Description</th>
        <th>Value</th>
    </thead>
    <tbody>
      <%@assignments.each do |assignment|%>
      <tr>
        <td><%=link_to assignment.name, assignment_path(assignment)%></td>
        <td>
          <%=assignment.description%>
        </td>
        <td>
          <%=assignment.value%>
        </td>
      </tr>
      <%end%>
    </tbody>
  </table>
  <% if current_user.admin?%>
  <a type="button" class="btn btn-primary"
    href="<%=new_assignment_path%>"><i class="icon-plus"></i> Add Assignment</a>
  <%end%>
  <a type="button" class="btn btn-default" href="<%=root_path%>">Back</a>