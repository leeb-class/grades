  <% end %>
  <% form_class="form-group"%>
  <% form_class+=" has-error" if @grade.errors.include?(:value)%>
  <div class="<%=form_class%>">
    <%= f.label :value, :class=>"control-label"%>
    <%= f.text_field :value, :class=>"form-control"%>
  </div>
  <div class="actions">
    <%= f.submit 'Save', :class=>"btn btn-primary"%>
    <a href="<%=assignment_path(@grade.assignment)%>" class="btn btn-default">Cancel</a>
  </div>
<% end %>
