<%= form_for(@grade) do |f| %>
  <% if @grade.errors.any? %>
    <div class="alert alert-danger">
      <h3><%= pluralize(@grade.errors.count, "error") %> prohibited this grade from being saved:</h3>

      <ul>
      <% @grade.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
